<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>$(AssemblyName)</Title>
    <Authors>cdecelle</Authors>
    <Description>Register your services with the InjectAttribute&lt;T&gt; on your implementation and a single extension method on IServiceCollection. IocAutoInject will automatically scan all assemblies to find and register all services with this attribute automatically. Lifetime default is scoped, but can be passed as a parameter.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
  </ItemGroup>

</Project>
